{% load i18n l10n static cms_static sekizai_tags %}

{{ editor_settings|json_script:editor_settings_id }}
{% if global_settings %}
    {{ global_settings|json_script:global_settings_id }}
{% endif %}

<script src="{% static 'djangocms_text_ckeditor/ckeditor/ckeditor.js' %}"></script>
<script src="{% static 'djangocms_text_ckeditor/js/djangocms_text_ckeditor.js' %}"></script>

<div class="cms-plugin cms-plugin-{{ instance.plugin_type|lower }} cms-plugin-{{ instance.pk }} {{ instance.css_classes }}"
     id="cms-plugin-{{ instance.pk }}"
     data-plugin-id="{{ instance.pk }}"
     data-plugin-type="{{ instance.plugin_type }}"
     data-language="{{ instance.language }}"
     data-placeholder-id="{{ instance.placeholder_id }}"
     data-field-id="{{ instance.field_id }}"
     data-field-name="{{ instance.field_name }}"
     data-field-label="{{ instance.field_label }}"
     {% if instance.readonly %}data-readonly="true"{% endif %}>
    {{ instance.body|safe }}
</div>
